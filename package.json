{
  "name": "nest-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "NODE_CONFIG_DIR=./dist/configs nest start --entryFile apps/api/src/main",
    "start:dev": "NODE_CONFIG_DIR=./dist/configs nest start --watch --entryFile apps/api/src/main",
    "start:debug": "NODE_CONFIG_DIR=./dist/configs nest start --debug --watch --entryFile apps/api/src/main",
    "start:prod": "NODE_CONFIG_DIR=./dist/configs node dist/apps/api/src/main",
    "start-crons": "NODE_CONFIG_DIR=./dist/configs node dist/apps/cron-jobs/src/main",
    "start-workers": "NODE_CONFIG_DIR=./dist/configs nest start --entryFile apps/workers/src/main",
    "start-workers:dev": "NODE_CONFIG_DIR=./dist/configs nest start --entryFile apps/workers/src/main --watch",
    "start-workers:debug": "NODE_CONFIG_DIR=./dist/configs nest start --entryFile apps/workers/src/main --debug --watch",
    "start-workers:prod": "NODE_CONFIG_DIR=./dist/configs node apps/workers/src/main",
    "lint": "eslint \"{src,apps,libs,test,database,configs,common}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test,database,configs,common}/**/*.ts\"",
    "lint:migrations": "eslint './data-source/migrations' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "SUPPRESS_NO_CONFIG_WARNING=true jest --coverage",
    "test:ci": "SUPPRESS_NO_CONFIG_WARNING=true jest --silent --testLocationInResults --ci --all --coverage --json --outputFile=\"report.json\" --config=\"jest.config.js\"",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_CONFIG_DIR=./configs jest --config jest.e2e.config.js --runInBand --testTimeout=7200000 --colors",
    "migration:generate": "./node_modules/.bin/sequelize migration:generate --migrations-path data-source/migrations --name $npm_config_name",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/platform-express": "^11.0.13",
    "@nestjs/sequelize": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.12",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.4",
    "@nestjs/testing": "^11.0.13",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.24.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "sequelize-cli": "^6.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
